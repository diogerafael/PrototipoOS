type
  TfrmCadastrarRevisaoRural = class(TFrmCadPadraoNovoGrande)
    grp4: TGroupBox;
    lbl24: TLabel;
    lbl25: TLabel;
    lbl26: TLabel;
    edtdtenviorevisao: TcxDateEdit;
    edtdtretornorevisao: TcxDateEdit;
    dbgrd2: TDBGrid;
    edtcodprojetistarevisao: TEdit;
    edtdescprojetistarevisao: TEdit;
    qry: TFDQuery;
    ds1: TDataSource;
